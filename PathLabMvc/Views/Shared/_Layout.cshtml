<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - PathLab</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .wrapper {
            display: flex;
            flex: 1;
        }
        .sidebar {
            width: 220px;
            background: #343a40;
            color: white;
            height: 100vh;
            position: fixed;
            top: 56px; /* below navbar */
            left: 0;
            padding-top: 20px;
        }
        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            display: block;
            padding: 10px 20px;
        }
        .sidebar a:hover {
            background: #495057;
            color: white;
        }
        .content {
            margin-left: 220px;
            padding: 20px;
            flex: 1;
        }
        .navbar {
            z-index: 1030;
        }
    </style>
</head>
<body>
    <!-- 🔹 Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">🧪 PathLab</a>
            <div class="d-flex">
                <a class="btn btn-outline-light me-2" href="/Auth/Login">Login</a>
                <a class="btn btn-outline-warning" href="/Auth/Logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="wrapper">
        <!-- 🔹 Sidebar -->
        <div class="sidebar">
            <h5 class="px-3">Menu</h5>
            <a href="/Dashboard">🏠 Dashboard</a>
            <a href="/Patients">👨‍⚕ Patients</a>
            <a href="/LabTests">🧬 Lab Tests</a>
            <a href="/Orders">📋 Orders</a>
            <a href="/Reports">📄 Reports</a>
        </div>

        <!-- 🔹 Main Content -->
        <div class="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>