@model IEnumerable<PathLabMvc.Models.ResponseDto.LabTestDto>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Lab Tests</h3>
        <a asp-action="Create" class="btn btn-success">+ Create New</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th style="width:70px">ID</th>
                <th>Name</th>
                <th>Parameters</th>
                <th class="text-end" style="width:200px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr><td colspan="4" class="text-center text-muted">No lab tests found.</td></tr>
            }
            else
            {
                foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Id</td>
                        <td>@t.Name</td>
                        <td>
                            @if (t.Parameters.Any())
                            {
                                <ul class="mb-0">
                                    @foreach (var p in t.Parameters)
                                    {
                                        <li>@p.Name (@p.Unit) — <span class="text-muted">@p.ReferenceRange</span></li>
                                    }
                                </ul>
                            }
                            else
                            {

                                <span class="text-muted">No parameters</span>
                                ;
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-info">View</a>
                            <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-primary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@t.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
